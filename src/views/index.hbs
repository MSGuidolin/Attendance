<div class="container p-4">
    {{#if permiso}}
    <a href="./anuncios/add" class="btn btn-success">Crear Anuncio</a>
    {{/if}}
    {{#if anuncios}}
    <div class="row">
        {{#each anuncios}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h1>{{titulo}}</h1>
                    <p>{{timeago created_at}}</p>
                    <a href="/anuncios/see/{{id}}" class="btn btn-info" role="button">DETALLES</a>
                    {{#if permiso}}
                    <a href="/anuncios/edit/{{id}}" class="btn btn-secondary" role="button">EDITAR</a>
                    <a href="/anuncios/delete/{{id}}" class="btn btn-danger" role="button">ELIMINAR</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{{/each}}
</div>

{{else}}
<div class="col-md-4 mx-auto">
    <div class="card card-body text-center">
