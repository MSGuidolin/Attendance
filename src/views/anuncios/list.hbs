<div class="container p-4">
    {{#if anuncios}}
    <a href="/anuncios/add" class="btn btn-success">Agregar Nuevo Anuncio</a>
    <br>
    <br>
    <div class="row">
        {{#each anuncios}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h1>{{titulo}}</h1>
                    <h5>{{descripcion}}</h5>
            </div>
        </div>
        {{/each}}

        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p> No hay anuncios creados a√∫n </p>
                <a href="/anuncios/add" class="btn btn-success"> Crea uno! </a>
            </div>
        </div>

        {{/if}}
    </div>
</div>