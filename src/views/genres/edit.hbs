<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-body">
            <form action="/genres/edit/{{genre.id}}" method="POST">
                <div class="form-group">
                    <label for="genre">Género:</label>
                    <input type="text" name="genre" class="form-control" placeholder="Género" value="{{genre.genre}}"
                        autofocus required>
                </div>
                <div class="form-group">
                    <label for="description">Descripción:</label>
                    <textarea name="description" rows="2" class="form-control"
                        placeholder="Descripción" required>{{genre.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="mini_desc">Mini Descripción:</label>
                    <textarea type="text" name="mini_desc" rows="2" class="form-control noresize"
                        placeholder="Mini Descripción" required>{{genre.mini_desc}}</textarea>
                </div>
                <button class="btn btn-success btn-block">
                    GUARDAR
                </button>
                <br>
                <div>
                    <a class="btn btn-secondary btn-block" href="/genres" role="button">VOLVER SIN GUARDAR</a>
                </div>
            </form>
        </div>
    </div>
</div>